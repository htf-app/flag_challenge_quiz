<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLAGS CHALLENGE"
        android:textColor="#FF5733"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- Schedule Text -->
    <TextView
        android:id="@+id/scheduleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/headerText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <!-- Timer Inputs Layout -->
    <LinearLayout
        android:id="@+id/timerInputsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scheduleLabel"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Hour Input -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hour"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/hourInput"
                android:layout_width="60dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Minute Input -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minute"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/minuteInput"
                android:layout_width="60dp"
                android:layout_marginTop="5dp"

                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Second Input -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/secondInput"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timerInputsLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Save"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/wrong"
        android:textColor="#ffffff"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:textSize="16sp" />

</RelativeLayout>
